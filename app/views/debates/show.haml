.container.debate-container
  .row
    .col.s12
      %h4 Resolved: #{@debate.resolution}
  .row
    .col.s4
      %h6 created #{localize(@debate.created_at, format: :long)}
    .col.s4
      %h6 updated #{localize(@debate.created_at, format: :long)}
    .col.s4
      %h6=@debate.creator.email
  .row
    .col.s12
      blah blah blah blah blah this is a debate blah
  .row
    = link_to 'Edit', edit_debate_path(@debate), class: "waves-effect btn-flat"
    = link_to 'Delete', debate_path(@debate), method: :delete, class: "waves-effect btn-flat", date: {confirm: "Are you sure you want to delete this debate?"} 
    = link_to 'Back', debates_path, class: "waves-effect btn-flat"
